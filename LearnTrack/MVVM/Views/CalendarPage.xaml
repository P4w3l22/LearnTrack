<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LearnTrack.Pages.CalendarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CalendarPage"
    BackgroundColor="{StaticResource BackgroundBlackColor}">
    <Grid ColumnDefinitions="100,.3*,.05*,.5*,.05*" RowDefinitions=".15*,.85*">

        <!--#region CurrentDateNotes-->
        <Grid Grid.RowSpan="2" Grid.Column="1">
            <Frame
                Margin="0,10,0,200"
                BackgroundColor="{StaticResource BackgroundBlackColor}"
                BorderColor="{StaticResource PrimaryColor}"
                CornerRadius="30">
                <Grid RowDefinitions=".2*,2,.8*">
                    <Label
                        Grid.Row="0"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{Binding SelectedDate}"
                        VerticalOptions="Center" />
                    <BoxView Grid.Row="1" Color="{StaticResource SecondaryGrayColor}" />
                    <ScrollView Grid.Row="2" Margin="0,40,0,20">
                        <StackLayout>
                            <CollectionView ItemsSource="{Binding CurrentDailyNotes}">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout
                                        HorizontalItemSpacing="20"
                                        Orientation="Vertical"
                                        VerticalItemSpacing="7" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Margin="0,0,0,10"
                                            Padding="0"
                                            BackgroundColor="{StaticResource BackgroundBlackColor}"
                                            BorderColor="{StaticResource SecondaryGrayColor}"
                                            CornerRadius="20">
                                            <Frame.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding IsCompleted}"
                                                    TargetType="Frame"
                                                    Value="True">
                                                    <Setter Property="Opacity" Value=".4" />
                                                </DataTrigger>
                                            </Frame.Triggers>
                                            <Grid ColumnDefinitions=".8*,.1*,.1*">
                                                <Button
                                                    Grid.Column="0"
                                                    BackgroundColor="{StaticResource BackgroundBlackColor}"
                                                    Clicked="Note_Clicked"
                                                    CornerRadius="20"
                                                    FontSize="20"
                                                    HeightRequest="60"
                                                    HorizontalOptions="Start"
                                                    Text="{Binding Title}"
                                                    TextColor="White" />
                                                <Button
                                                    Grid.Column="1"
                                                    Margin="0,0,10,0"
                                                    BackgroundColor="{StaticResource BackgroundBlackColor}"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteDailyNoteCommand}"
                                                    CommandParameter="{Binding Id}"
                                                    CornerRadius="15"
                                                    FontFamily="Icons"
                                                    FontSize="15"
                                                    HeightRequest="10"
                                                    HorizontalOptions="End"
                                                    Text="&#xE801;"
                                                    TextColor="Red"
                                                    WidthRequest="10" />
                                                <CheckBox
                                                    Grid.Column="2"
                                                    CheckedChanged="DailyNoteCompletedChange_CheckedChanged"
                                                    HorizontalOptions="End"
                                                    IsChecked="{Binding IsCompleted}"
                                                    Color="{StaticResource PrimaryColor}" />
                                            </Grid>

                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Button
                                Margin="0,30"
                                Padding="0"
                                BackgroundColor="{StaticResource BackgroundBlackColor}"
                                BorderColor="{StaticResource PrimaryColor}"
                                BorderWidth="2"
                                Clicked="AddNewDailyNote_Clicked"
                                FontSize="Large"
                                HeightRequest="40"
                                Text="+"
                                TextColor="{StaticResource PrimaryColor}"
                                WidthRequest="40" />
                        </StackLayout>
                    </ScrollView>
                </Grid>
            </Frame>
        </Grid>
        <!--#endregion-->


        <!--#region CalendarCards-->
        <Grid Grid.Column="3" RowDefinitions="*,*">
            <Grid HorizontalOptions="Center">
                <FlexLayout AlignItems="Center" JustifyContent="SpaceBetween">
                    <Button
                        BackgroundColor="{StaticResource PrimaryColor}"
                        Command="{Binding DecrementSelectedMonthCommand}"
                        FontFamily="Icons"
                        FontSize="25"
                        HeightRequest="30"
                        Text="&#xE803;"
                        WidthRequest="30" />
                    <HorizontalStackLayout>
                        <Button
                            x:Name="Month_Button"
                            BackgroundColor="{StaticResource BackgroundBlackColor}"
                            FontSize="20"
                            Text="{Binding SelectedMonthName}"
                            TextColor="{StaticResource PrimaryColor}"
                            VerticalOptions="Center" />
                        <Button
                            x:Name="Year_Button"
                            BackgroundColor="{StaticResource BackgroundBlackColor}"
                            FontSize="20"
                            Text="{Binding SelectedYear}"
                            TextColor="{StaticResource PrimaryColor}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Button
                        BackgroundColor="{StaticResource PrimaryColor}"
                        Command="{Binding IncrementSelectedMonthCommand}"
                        FontFamily="Icons"
                        FontSize="25"
                        HeightRequest="30"
                        Text="&#xE804;"
                        WidthRequest="30" />
                </FlexLayout>
            </Grid>
            <Grid
                Grid.Row="1"
                Padding="10"
                ColumnDefinitions="*,*,*,*,*,*,*"
                RowDefinitions="*,15,1"
                VerticalOptions="Center">
                <Label
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Text="Pon"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    Text="Wt"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    Text="Åšr"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="3"
                    HorizontalOptions="Center"
                    Text="Czw"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="4"
                    HorizontalOptions="Center"
                    Text="Ptk"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="5"
                    HorizontalOptions="Center"
                    Text="Sob"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="6"
                    HorizontalOptions="Center"
                    Text="Nie"
                    VerticalOptions="Center" />
                <BoxView
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="7"
                    Color="{StaticResource SecondaryGrayColor}" />
            </Grid>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="3"
            Margin="0,25,0,0">
            <CollectionView ItemsSource="{Binding CalendarCards}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        Grid.Column="2"
                        HorizontalItemSpacing="5"
                        Orientation="Vertical"
                        Span="7"
                        VerticalItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Grid.Row="{Binding RowId}"
                            Grid.Column="{Binding ColumnId}"
                            Margin="0"
                            Padding="0"
                            BackgroundColor="{StaticResource BackgroundBlackColor}"
                            BorderColor="{StaticResource SecondaryGrayColor}"
                            HeightRequest="100"
                            WidthRequest="70">

                            <Frame.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsCurrentMonth}"
                                    TargetType="Frame"
                                    Value="False">
                                    <Setter Property="Opacity" Value=".4" />
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Frame.Triggers>

                            <Grid RowDefinitions="*,1,*">
                                <!--  Clicked="CalendarCard_Clicked"  -->
                                <Button
                                    Grid.Row="0"
                                    BackgroundColor="{StaticResource BackgroundBlackColor}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ChangeSelectedDayCommand}"
                                    CommandParameter="{Binding DayNumber}"
                                    FontSize="30"
                                    HorizontalOptions="Center"
                                    Text="{Binding DayNumber}"
                                    TextColor="White"
                                    VerticalOptions="Center" />
                                <BoxView Grid.Row="1" Margin="10,0,10,0" />
                                <Label
                                    Grid.Row="2"
                                    HorizontalOptions="Center"
                                    Text="{Binding TasksStatus}"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <!--#endregion-->
    </Grid>
</ContentPage>